<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivLogo"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivLogo"
            android:layout_toEndOf="@+id/ivLogo"
            android:layout_marginStart="12dp"
            android:id="@+id/tvName"
            android:layout_margin="5dp" android:textStyle="normal|bold" android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGenre"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/ivLogo" android:layout_alignStart="@+id/tvName" android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRating"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true" android:layout_toEndOf="@+id/ivLogo" android:textSize="14sp"/>
</RelativeLayout>